<div class="modal fade" id="modal-delete-client" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">{{ 'customer.confirm_deletion.title'|trans }}</h4>
            </div>
            <div class="modal-body">
                {{ 'customer.confirm_deletion.prefix'|trans }}
                <strong class="client_name"></strong>
                {{ 'customer.confirm_deletion.suffix'|trans }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'customer.confirm_deletion.cancel'|trans }}</button>
                <a href="#" class="btn btn-danger btn-ok">{{ 'customer.list.action.delete'|trans }}</a>
            </div>
        </div>
    </div>
</div>